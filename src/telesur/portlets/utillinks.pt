<dl class="portlet utilLinks"
    i18n:domain="telesur.portlets"
    tal:define="can_add_news view/canAddNews;
                can_add_polls view/canAddPolls;"
    tal:condition="can_add_news|can_add_polls">

    <!--<dt class="portletHeader" tal:condition="view/getHeader">
        <span class="portletTopLeft"></span>
        <span tal:content="view/getHeader" />
        <span class="portletTopRight"></span>
    </dt>-->

    <dd class="portletItem"
        tal:define="portal_url context/@@plone_portal_state/portal_url;">
        <div class="link-noticias"
             tal:condition="can_add_news">
            <a href="#"
               tal:attributes="href string:${portal_url}/articulos/++add++collective.nitf.content">
               Agregar noticia
            </a>
        </div>
        
        <div class="link-encuestas"
             tal:condition="can_add_polls">
            <a href="#"
               tal:attributes="href string:${portal_url}/encuestas/++add++collective.polls.poll">
               Agregar encuesta
            </a>
        </div>
        
    </dd>
</dl>
